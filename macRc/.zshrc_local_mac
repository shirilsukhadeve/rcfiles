setconfigalias() {
	if [[ -d $HOME/.cfg ]]; then
		#echo -e "setting alias to $HOME/.cfg"
		alias cdcfg='cd $HOME/.cfg'
	fi
}
setconfigalias
eval $(thefuck --alias)
eval $(thefuck --alias fk)
PS1='$(kube_ps1)'$PS1
